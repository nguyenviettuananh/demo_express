{% extends 'layout.twig' %}

{% block content %}

    <h1> Register</h1>
    <ul class="list-group">
        {% if errors %}
            {% for error in errors %}
                <li class="list-group-item list-group-item-danger">{{ error.msg }}</li>
            {% endfor %}
        {% endif %}
    </ul>

    <form method="post">
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="email" name="field[email]" placeholder="Enter email" value="{{ data.email }}"/>
    </div>
    <div class="form-group">
        <label>Display Name</label>
        <input class="form-control" type="text" name="field[display_name]" placeholder="Enter username" value="{{ data.display_name }}" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" type="password" name="field[password]" id="password1" placeholder="Enter password"/>
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input class="form-control" type="password" name="field[confirmed_password]" id="password2" placeholder="Confirm password"/>
    </div>
    <button class="btn btn-default pull-right" type="submit">Register</button>
{% endblock %}

{% block jsExtends %}
    <script>
          $('form').on('submit',function(e){
              if($('#password1').val() != $('#password2').val()){
                  $('.list-group').append("<li'><div class='alert alert-danger fade in'><a href='#' class='close' data-dismiss='alert' aria-label='close'>&times;</a>Your confirmation password didn't match your password</div></li>");
                  return false;
              }
          });
    </script>
{% endblock %}