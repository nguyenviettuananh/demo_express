{% extends 'layout.twig' %}

{% block content %}
    <h1>Login</h1>
    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="text" name="email"/>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" type="password" name="password" />
        </div>
        <button class="btn btn-default" type="submit">Log in</button>
    </form>
{% endblock %}