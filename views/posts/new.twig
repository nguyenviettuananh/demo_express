{% extends "../layout.twig" %}

{% block content %}
    {% for key, value in app.session.flashbag.all %}
        {% for val in value %}
            <div class="alert alert-{{ key }}">
                {{ val }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">{{ title }}</h3>
            <div class="col-md-12">
                <div class="row">
                    <form method="post">
                        <div class="form-group">
                            <label>Title</label>
                            <input class="form-control" value="{{ data.title }}" name="field[title]" required>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <textarea class="form-control" name="field[content]" required>{{ data.content }}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="sel1">Select list:</label>
                            <select name="field[published]" class="form-control" id="sel1">
                                <option {% if data.published == 0 %} selected {% endif %} value="0">No</option>
                                <option {% if data.published == 1 %} selected {% endif %} value="1">Yes</option>
                                <option {% if data.published == 2 %} selected {% endif %} value="2">Don't know</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">{% if data %} Update {% else %} Create {% endif %}</button>
                        </div>
                    </form>
                </div>
            </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
            the plugin.
        </div>
    </div>
{% endblock %}